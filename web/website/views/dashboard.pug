extends layout

block content
  page
    p Welcome, #{username}!
    cards
      card
        name View Logs
        desc Click the button below to view and download both audio and survey logs of the users.
        a(href="/reports") View!
      
      if head
        card
          name Manage Admins
          desc Add, edit and remove administrative accounts.
          a(href="/accounts/manage") Manage!
        card
          name Add Admins
          desc Create new administrator accounts by filling out this form.
          a(href="/accounts/add") Go to form!
